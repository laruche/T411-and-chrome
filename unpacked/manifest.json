{
  "name": "T411 and Me",

  "description": "T411 widget ! Suivez votre ration directement depuis le navigateur + télécharger ditectement depuis vos sites préférés :) (Allocine + Betaseries)",
  "version": "0.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage", "downloads"
  ],
  "icons": { "128": "icon.png" },
  "background": {
    "scripts": ["js/jquery.min.js","js/background.js"],
    "persistent": true
  },  
  "browser_action": {
      "default_title": "Set this page's color.",
      "default_icon": "icon.png",
      "default_popup": "html/popupLogin.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/messages.js"]
    }
  ],
  "manifest_version": 2
}
